{
  "name": "@typeflowai/database",
  "private": true,
  "version": "1.0.0",
  "main": "./src/index.ts",
  "files": [
    "src",
    "zod",
    "zod-utils.ts"
  ],
  "scripts": {
    "clean": "rimraf .turbo node_modules",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:dev": "dotenv -e ../../.env -- pnpm prisma migrate dev",
    "db:migrate:prod": "dotenv -e ../../.env.prod -- pnpm prisma migrate deploy",
    "db:push": "prisma db push --accept-data-loss",
    "db:setup": "pnpm db:up && pnpm db:migrate:dev",
    "db:start": "pnpm db:setup",
    "format": "prisma format",
    "generate": "prisma generate",
    "lint": "eslint ./src --fix",
    "post-install": "pnpm generate",
    "predev": "pnpm generate"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@prisma/extension-accelerate": "^0.6.2",
    "dotenv-cli": "^7.3.0"
  },
  "devDependencies": {
    "@typeflowai/tsconfig": "workspace:*",
    "@typeflowai/types": "workspace:*",
    "eslint-config-typeflowai": "workspace:*",
    "prisma": "^5.7.1",
    "prisma-dbml-generator": "^0.10.0",
    "prisma-json-types-generator": "^3.0.3",
    "zod": "^3.22.4",
    "zod-prisma": "^0.5.4"
  }
}
